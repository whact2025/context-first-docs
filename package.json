{
  "name": "truth-layer",
  "version": "0.1.0",
  "description": "TruthLayer - agentic collaboration approval layer (ACAL) for solution modeling - a self-referential implementation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "install:all": "node scripts/install.js",
    "install:deps": "node scripts/install.js --skip-build --skip-tests",
    "build": "tsc",
    "build:whitepaper-docx": "node scripts/build-whitepaper-docx.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "dev": "tsc --watch",
    "playground": "concurrently -n server,ui \"npm run server\" \"npm run build && node dist/playground/server.js\"",
    "playground:ui": "npm run build && node dist/playground/server.js",
    "server": "cd server && cargo run",
    "install:ctx-extension": "node scripts/install-ctx-extension.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "context",
    "documentation",
    "agentic",
    "markdown",
    "collaboration",
    "git",
    "self-referential",
    "context-graph"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whact2025/truth-layer.git"
  },
  "bugs": {
    "url": "https://github.com/whact2025/truth-layer/issues"
  },
  "homepage": "https://github.com/whact2025/truth-layer#readme",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "concurrently": "^9.0.0"
  },
  "dependencies": {
    "markdown-it": "^13.0.0",
    "yaml": "^2.3.0"
  }
}