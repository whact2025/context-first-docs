{
  // Jest Extension Settings (orta.vscode-jest)
  // On Windows, "run tests with coverage" from the extension may fail with: spawn cmd.exe ENOENT.
  // Workaround: use Terminal > Run Task > "Tests: run with coverage", or run: npm run test:coverage
  "jest.jestCommandLine": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
  "jest.autoRun": "off",
  "jest.showCoverageOnLoad": false,
  "jest.rootPath": "${workspaceFolder}",
  "jest.testExplorer": {
    "enabled": true,
    "showCoverageOnLoad": false
  },
  "jest.nodeEnv": {
    "NODE_OPTIONS": "--experimental-vm-modules"
  },
  "jest.jestConfigPath": "jest.config.js",
  "jest.runMode": "on-demand",
  
  // Jest Runner Extension Settings (alternative test runner)
  "jestRunner.jestCommand": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
  "jestRunner.runOptions": ["--experimental-vm-modules"],
  
  // TypeScript Settings
  // Use relative path - will resolve from workspace root
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  
  // Test Explorer Settings (for native VS Code/Cursor test explorer)
  "testing.automaticallyOpenPeekView": "never",
  "testing.followRunningTest": false
}
